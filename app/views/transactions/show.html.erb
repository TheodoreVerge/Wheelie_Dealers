<div class="container">
  <div class="d-flex justify-content-between pt-5" style="height:520px">
    <div>
      <p class="d-flex col-md-4 align-items-center flex-column"> <%= cl_image_tag @transaction.user.photo.key, gravity: :face, crop: :thumb, class: "avatar-large"%> Buyer - <%= @transaction.user.email %> </p>
    </div>
    <div class="d-flex col-md-4 align-items-center text-center flex-column">
      <h4 class="align-items-end">
        <h4>*relevant bike card*</h4>
        <%= @transaction.bike.title %>
        <br>
        <%= @transaction.bike.description %>
        <br>
        <%= @transaction.bike.price %>
      </h4>
        <button type="button" class="btn btn-primary">Confirm Purchase</button>
    </div>

    <div>
       <p class="d-flex col-md-4 align-items-center flex-column"> <%= cl_image_tag @transaction.bike.user.photo.key, gravity: :face, crop: :thumb, class: "avatar-large"%> Seller - <%= @transaction.bike.user.email %> </p>
    </div>
  </div>
</div>
