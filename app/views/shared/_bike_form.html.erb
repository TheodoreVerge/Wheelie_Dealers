<!-- <div class="container"> -->
    <div class="row justify-content-left">
      <div class="form">
        <h1 style="font-family: 'Vibur';">Search for bikes</h1>
        <!-- <div class="col-md-4"> -->

        <%= simple_form_for :bikes, url: bikes_path, method: :get  do |f| %>
          <%= f.input :postcode, placeholder: "Type your postcode", label: false;%>
          <%= f.input :price, placeholder: "Price", label: false; %>
          <%= f.input :brand, placeholder: "Brand", label: false; %>
          <%= f.button :submit, "Find your bike!", class: 'btn btn-block submit_button' %>
        <% end %>
      <!-- </div> -->
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/places.js@1.18.1"></script>
