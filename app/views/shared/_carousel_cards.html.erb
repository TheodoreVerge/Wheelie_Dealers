<div class="d-flex">
  <% @bikes = Bike.all %>
  <% @bikes.each do |bike| %>
  <div class="card-deck">
    <div class="card">
      <% if bike.photos.any? %>
      <%= cl_image_tag bike.photos.first.key, class: "card-img"%>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= bike.title %></h5>
        <p class="card-text"><%= bike.description %></p>
        <p class="card-text"><small class="text-muted"><%= link_to "Find out more!", bike_path(bike) %></small></p>
      </div>
    </div>
  </div>
  <% end %>
</div>


