
  <!--   Bike Card  -->

<div class="container-fluid">
   <div class="row">
    <div class="col-6 mt-5">
      <div class="card rounded mb-3">
        <h2 class="card-header"><%= @bike.title %></h2>
        <div class= "button-align">
          <% if @bike.photos.any? %>
          <%= cl_image_tag @bike.photos.first.key, class: "card-img-top card-resizing" %>
          <% end %>
        </div>
        <div class="card-body card-position">
          <div>
            <h4 class="card-text"><%= @bike.address %></h4>
            <p class="card-text"><%= @bike.description %></p>
          </div>
          <div>
            <h2 class="card-text"> Â£<%=@bike.price %></h2>
          </div>
        </div>
          <div class="d-flex justify-content-center">
            <p class= "mb-6 col-md-6 button-width">  <%= link_to "Buy this bike", bike_transactions_path(@bike), method: :post, class:"btn link_color", style:"
    margin-right: 8px;"%><%= link_to "Return to bike list", bikes_path, class:"btn link_color" %>
           </p>
          </div>
      </div>
  </div>
    <div class="col-6">
      <div id="map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>


