<div class="body_form">
  <div class="basic_form">
    <h1>List your bike!</h1>
      <%= simple_form_for(@bike) do |f|%>
      <%= f.input :title, input_html: { class: 'input' } %>
      <%= f.input :description, input_html: { class: 'input' } %>
      <%= f.input :price, input_html: { class: 'input' } %>
      <%= f.input :brand, input_html: { class: 'input' } %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }%>
      <%= f.submit "List it!", class: "btn btn-block submit_button" %>
      <% end %>

  </div>

</div>

