<div class="card">

  <!-- Card body -->
  <div class="card-body">

<h1>Put your bike for sale</h1>

<div class="md-form">

<%= simple_form_for(@bike) do |f|%>
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :price %>
<%= f.input :brand %>
<%= f.input :photos, as: :file, input_html: { multiple: true }%>
<%= f.submit "Sell it", class: "btn btn-primary" %>
<% end %>
</div>
</div>
</div>
