<div class="container-fluid">
  <div class="row">
    <div class="col-8">
      <div class="container mb-5 mt-5">
        <div class="row">
          <% @bikes.each do |bike| %>
            <div class="col-4">
              <div class="card rounded card-style mb-3">
                <h5 class="card-header"><%= bike.title %></h5>
                <% if bike.photos.any? %>
                <%= cl_image_tag bike.photos.first.key, class: "card-img-top", :height => 200, :crop=>"fill" %>
                <% end %>
                <div class="card-body">
                  <p class="card-text"><%= bike.description %></p>
                  <h3 class="card-text"> Â£<%=bike.price %></h3>
                  <%= link_to "View this bike", bike_path(bike), class:"btn btn-block submit-button link_color" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div id="map"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
