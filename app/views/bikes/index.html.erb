<div class="container">
  <% @bikes.each do |bike|%>
    <div class="bike-card">
      <div>
        <% if bike.photos.any? %>
          <%= cl_image_tag bike.photos.first.key, height: 300, width: 300, crop: :fill, class: "img-style" %></div>

        <% end %>
        <div class="card-center">
          <div>
            <h4><%= bike.title %></h4>
            <p><%= link_to "more details", bike_path(bike.id) %></p>
          </div>
          <div>
            <p class="card-text"></p>
            <p><%= bike.description %></p>

          </div>
          <div>
           <p> <%#= link_to "Find more details", bike_path(@bike), class:"btn btn-primary" %></p>
          </div>
        </div>
        <div class="price-container">
          <div> <%= image_tag "avatar.png", :class => "avatar" %> </div>
          <div class="price"><%= bike.price %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div id="map"
     style="width: 100%;
     height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

